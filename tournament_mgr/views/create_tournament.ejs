<%- include("_header") -%>

<h1>Turnier erstellen</h1>

<form action="/create_tournament" method="post">
  <div class="form-horizontal">

    <%- include("_editor_tournaments") -%>
    <div>
        <h2>Spieler ausw√§hlen</h2>
        <fieldset>
            <ul>
                <%= console.log(model) %>
                <% for (const player of model) { %>
                        <input type="checkbox" id=<%= player.Player_ID %> value=<%= player.Player_ID %> name=<%= player.Player_ID %>>
                        <label class="col-form-label col-sm-2" for=<%= player.Player_ID %> ><%= player.Player_Name %></label>
                        <br>
                <% } %>
            </ul>
        </fieldset>
    </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/tournaments">Abbruch</a>
      </div>
    </div>
  </div>
</form>


      

<%- include("_footer") -%>